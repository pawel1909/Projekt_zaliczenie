<Application x:Class="Projekt_zaliczenie.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Projekt_zaliczenie"
             StartupUri="Login.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="LightPink"/>
            <!-- Zmiana Koloru wszystkich przycisków w programie -->
        </Style>
        <Style TargetType="{x:Type ComboBox}" x:Key="ComboBackground">
            <Setter Property="Background" Value="Black"/>
            <!-- Zmiana Koloru wszystkich comboboxów -->
        </Style>
    </Application.Resources>
    
</Application>
